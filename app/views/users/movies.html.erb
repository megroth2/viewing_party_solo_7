<% # the outer-most if statement could be moved to the movies action in the users controller, but I was encountering an issue so I put it here %> 
<% if @user %>

  <% if @movie_keyword_search_results != nil %> #return search results
    <% @movie_keyword_search_results.map do |movie| %>
      <%= @facade.movie.title %>
      <%= @facade.movie.vote_average %>
    <% end %>
  <% else %> # return top rated movies
    <% @top_rated_movies.map do |top_rated_movie| %>
      <%= @facade.top_rated_movie.title %>
      <%= @facade.top_rated_movie.vote_average %>
    <% end%>
  <% end%>
    
<% else %>
    <h3><%= "Error: user does not exist" %></h3>
<% end %>